# 示例环境变量配置（复制为 .env 并修改）
FLASK_ENV=production
SECRET_KEY=change_this_secret_key
DATABASE_URL=sqlite:///data.db       # 或 PostgreSQL: postgresql://user:pass@host:5432/dbname
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=admin123      # 部署后请务必修改

# Google Sheets optional (if you want automatic backup)
# Set SHEETS_ENABLED=true to enable
SHEETS_ENABLED=false
# Option A: path to service account JSON file on the server
GOOGLE_SERVICE_ACCOUNT_FILE=credentials.json
# Option B: put the JSON credentials in one env var (base64 encoded recommended)
# GOOGLE_SERVICE_ACCOUNT_INFO='{"type": "...", ... }'
SHEET_ID=your_google_sheet_id_here
SHEET_NAME=Sheet1
